<resources>
    <!-- the theme applied to the application or context -->
    <style name="darkGrayButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_gray_dark_solid</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="lightGrayButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_light_gray_solid</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="yellowButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_yellow_solid</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="navyBlueButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_navy_blue_solid</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="transparentButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_transparent_solid</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="noBackgroundButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="orangeButton">
        <item name="android:textColor">@color/pure_white</item>
        <item name="android:background">@drawable/rounded_orange_solid</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="whiteLayout">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_white_solid</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="togglePressed">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue_sky</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="toggleReleased">
        <item name="android:textColor">@color/gray_dark_five</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="redToast">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/red_light</item>
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
        <item name="android:paddingTop">@dimen/spacing_smaller</item>
        <item name="android:paddingBottom">@dimen/spacing_smaller</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="grayToast">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_gray_dark_solid</item>
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
        <item name="android:paddingTop">@dimen/spacing_smallest</item>
        <item name="android:paddingBottom">@dimen/spacing_smallest</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minLines">2</item>
    </style>

    <style name="MyPopupMenu"
        parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/gray_dark_seven</item>
    </style>
    
    <style name="searchView">
        <item name="android:textColor">@color/gray_dark_five</item>
        <item name="android:editTextColor">@color/gray_dark_five</item>
        <item name="android:textColorHint">@color/gray_light_six</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:singleLine">true</item>

    </style>


    <style name="MaterialDesignStyle" parent="MD">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>